{
  "name": "spring-launcher",
  "version": "1.0.0",
  "description": "Electron-based SpringRTS Launcher app",
  "main": "src/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "start-dev": "electron . --dev",
    "pack": "electron-builder --dir",
    "build-linux": "electron-builder -l",
    "build-win": "electron-builder -w",
    "build-win-portable": "electron-builder -w portable",
    "build-mac": "electron-builder -m",
    "build": "electron-builder -wl"
  },
  "author": "gajop",
  "license": "ISC",
  "devDependencies": {
    "electron": "^3.0.10",
    "electron-builder": "^20.38.2"
  },
  "build": {
    "appId": "com.springrts.launcher",
    "extraFiles": [
      "bin/*",
      "files/*"
    ],
    "artifactName": "${productName}.${ext}",
    "linux": {
      "target": "AppImage",
      "category": "Game"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": true
    },
    "publish": {
      "provider": "generic",
      "url": "https://spring-launcher.ams3.digitaloceanspaces.com",
      "channel": "latest"
    }
  },
  "dependencies": {
    "chokidar": "^2.0.4",
    "electron-is-dev": "^1.0.1",
    "electron-log": "^2.2.17",
    "electron-settings": "^3.2.0",
    "electron-updater": "^4.0.4"
  }
}
